
<%= form_with(model:@photo, local: true) do |f| %>
  <div class="field">
    <%= f.label :title, "名称" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :describe, "説明" %><br />
    <%= f.text_area :describe, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>





